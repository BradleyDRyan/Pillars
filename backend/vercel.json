{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "20.x"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/title-worker",
      "destination": "/api/title-worker"
    },
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "functions": {
    "api/title-worker.js": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/process-triggers",
      "schedule": "*/15 * * * *"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}